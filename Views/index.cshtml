@{
  Layout="Shared/_Layout.cshtml";
}

<h1 class="well text-center">My Favorite Music</h1>
@if (@Model.Count == 0)
{
  <h3>No categories have been created yet.</h3>
} else {
  <h3>Choose a category to see albums:</h3>
  @foreach (var category in Model)
  {
    <h5><a href="/categories/@category.GetId()">@category.GetName()</a></h5>
  }
}
<h3><a href='/categories/new'>Add a category</a></h3>
<p><a href="/albums">View all Albums</a></p>
