@{
  Layout="Shared/_Layout.cshtml";
}

<h1 class="well text-center">My Favorite Music</h1>
@if (@Model.Count == 0)
{
  <h3>No categories have been created yet.</h3>
} else {
  <h3>Choose a category to see albums or <a href='/categories/new'>Add a category</a></h3>
  @foreach (var category in Model)
  {
    <ul>
    <li><a href="/categories/@category.GetId()">@category.GetName()</a></li>
    </ul>
  }
}
<hr>
<h3><a href="/albums">View all Albums</a></h3>
