@{
  Layout="Shared/_Layout.cshtml";
}

<h1>All Albums</h1>
@if (@Model.Count == 0)
{
  <h3>No albums have been added yet!</h3>
  <p><a href="/">Choose a category to add album to.</a></p>
}
@foreach (var album in Model)
{
  <ul>
    <li><a href="/album/@album.GetAlbumId()">@album.GetTitle() by @album.GetArtist()</a></li>
  </ul>
}
<p><a href="/">Home</a></p>
